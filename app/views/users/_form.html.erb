<% if @user.errors.any? %>
<div class="alert alert-danger">
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %> 
<%= form_with(model: @user, local: true) do |f| %>
<form action="">
  <div class="form-input-title">
    <label for="title"> <%= f.label :username %></label>
    <%= f.text_field :username, id: 'username', type: 'text', placeholder: 'Username' %>
  </div>
  <div class="form-input-title">
    <label for="title"> <%= f.label :password %></label>
    <%= f.password_field :password, id: 'password', type: 'text', placeholder: 'Password' %>
  </div>
  <div class="form-input-buttons"><%= link_to 'Cancel', root_path, class: "btn-classic" %> <%= f.submit(@user.new_record? ? "Sign up" : "Update account" , class: "btn-classic") %></div>
</form>
<% end %>
